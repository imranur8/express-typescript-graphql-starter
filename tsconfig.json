{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "paths": {
      "@utils/*": [
        "src/utils/*",
      ],
      "*": [
        "node_modules/*",
      ],
    }
  },
  "include": [
    "src/**/*",
    "src/graphql/*/*.graphql", "schema.js"
  ]
}