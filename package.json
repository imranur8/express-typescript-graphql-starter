{
  "name": "express-typescript-graphql-starter",
  "version": "1.0.0",
  "main": "build/index.js",
  "license": "UNLICENSED",
  "descriptions": "Graphql server build with nodejs, Express, Typescript, Mongo, GraphQL",
  "scripts": {
    "clean": "rimraf build/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean copy-gql lint tsc",
    "gql-gen": "./node_modules/.bin/gql-gen",
    "dev:start": "npm-run-all clean copy-gql lint tsc && node .",
    "dev-inspect:start": "npm-run-all clean copy-gql lint tsc && node --inspect .",
    "dev": "NODE_ENV=development node_modules/.bin/nodemon --ignore api.log --watch src -e ts,ejs,graphql --exec yarn dev:start",
    "dev-debug": "NODE_ENV=development node_modules/.bin/nodemon --ignore api.log --watch src -e ts,ejs,graphql --exec yarn dev-inspect:start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-gql": "node copyGraphql.js"
  },
  "dependencies": {
    "base64-url": "^2.2.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "faker": "^4.1.0",
    "global": "^4.3.2",
    "graphql": "^14.1.1",
    "graphql-code-generator": "^0.17.0",
    "graphql-codegen-typescript-common": "^0.17.0",
    "graphql-codegen-typescript-server": "^0.17.0",
    "graphql-s2s": "^0.18.2",
    "graphql-tools": "^4.0.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongo-cursor-pagination": "^7.1.0",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.18",
    "mongoose-validator": "^2.1.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "schemaglue": "^4.0.2",
    "shelljs": "^0.8.3",
    "slugify": "^1.3.4",
    "ts-node": "^8.0.2",
    "validator": "^10.11.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/base64-url": "^2.2.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/faker": "^4.1.5",
    "@types/graphql": "^14.0.5",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.1.19",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.24",
    "@types/shelljs": "^0.8.2",
    "@types/winston": "^2.4.4",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
